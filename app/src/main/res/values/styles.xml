<?xml version="1.0" encoding="utf-8"?>
<resources>


     Theme Button Style
    <style name="ButtonTheme" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:background">@drawable/round_button_bg</item>
<!--        <item name="android:elevation">@dimen/button_elevation</item>-->
        <item name="android:translationZ">@dimen/_2sdp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:outlineProvider">background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textSize16</item>
        <item name="android:layout_marginTop">@dimen/common_top_margin</item>
        <item name="android:layout_marginEnd">@dimen/common_start_margin</item>
        <item name="android:layout_marginStart">@dimen/common_end_margin</item>
    </style>

    <!-- Theme Edit Text Style -->
    <style name="EditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/editText_height</item>
        <item name="android:background">@drawable/edit_text_round_bg</item>
        <item name="android:drawablePadding">@dimen/drawable_padding</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:layout_marginStart">@dimen/common_start_margin</item>
        <item name="android:layout_marginEnd">@dimen/common_start_margin</item>
        <item name="android:layout_marginTop">@dimen/common_top_margin</item>
        <item name="android:paddingStart">@dimen/common_start_padding</item>
        <item name="android:paddingEnd">@dimen/common_end_padding</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/textSize14</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
    </style>

</resources>